<Page
    x:Class="HipHopf.ExtendedSplash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HipHopf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#464646" >
        <Canvas HorizontalAlignment="Left" Height="800" Margin="158,46,0,0" VerticalAlignment="Top" Width="1220">

            <Image x:Name="extendedSplashImage" Source="Assets/Pure_Geometry.png"/>

            <ProgressRing Name="splashProgressRing" IsActive="True" Width="20" HorizontalAlignment="Center"></ProgressRing>
        </Canvas>
    </Grid>
</Page>
